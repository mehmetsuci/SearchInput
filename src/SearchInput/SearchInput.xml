<?xml version="1.0" encoding="utf-8" ?>
<widget id="SearchInput.widget.SearchInput" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
  <name>SearchInput</name>
  <description>An input box with an integrated search button.</description>
  <icon />
  <properties>
    <property key="targetAttribute" type="attribute">
      <caption>Attribute</caption>
      <category>Appearance</category>
      <description></description>
      <attributeTypes>
        <attributeType name="String" />
      </attributeTypes>
    </property>
    <property key="mfToExecute" type="microflow" required="true" defaultValue="">
      <caption>Microflow</caption>
      <category>Settings</category>
      <description>The microflow to invoke after hitting the enter key.</description>
      <returnType type="Void"/>
    </property>
    <property key="placeholder" type="translatableString" required="false">
      <caption>Placeholder text</caption>
      <category>General</category>
      <description>Placeholder for when the inputbox is empty</description>
    </property>
    <property key="buttonIconClass" type="string" required="true" defaultValue="search">
      <caption>Button icon</caption>
      <category>General</category>
      <description>Glyphicon that is used in the button. This has the value "glyphicon glyphicon-" + this value. See http://getbootstrap.com/components/#glyphicons</description>
    </property>
    <property key="buttonstyle" type="enumeration" required="true" defaultValue="default">
      <caption>Button style</caption>
      <category>General</category>
      <description>Button color using a Bootstrap class</description>
      <enumerationValues>
        <enumerationValue key="default">Default</enumerationValue>
        <enumerationValue key="inverse">Inverse</enumerationValue>
        <enumerationValue key="primary">Primary</enumerationValue>
        <enumerationValue key="info">Info</enumerationValue>
        <enumerationValue key="success">Success</enumerationValue>
        <enumerationValue key="warning">Warning</enumerationValue>
        <enumerationValue key="danger">Danger</enumerationValue>
      </enumerationValues>
    </property>
    <property key="showProgressBar" type="boolean" required="true" defaultValue="false">
      <caption>Show Progress Bar</caption>
      <category>Settings</category>
      <description></description>
    </property>
    <property key="isModal" type="boolean" required="true" defaultValue="false">
      <caption>Blocking progress bar</caption>
      <category>Settings</category>
      <description>Used when progress bar is set to appear</description>
    </property>
    <property key="progressBarMessage" type="string" required="false" defaultValue="Working...">
      <caption>Progress Bar Message</caption>
      <category>Settings</category>
      <description>Used when progress bar is set to appear</description>
    </property>
    <property key="mfToExecuteOnChange" type="microflow" required="false" defaultValue="">
      <caption>On Change Microflow</caption>
      <category>Settings</category>
      <description>The microflow to execute on change of the input value.</description>
      <returnType type="Void"/>
    </property>
  </properties>
</widget>
